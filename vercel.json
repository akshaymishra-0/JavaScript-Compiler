{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "client/build",
  "installCommand": "npm install",
  "rewrites": [
    { 
      "source": "/api/(.*)",
      "destination": "/api" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CI": "false"
  }
}